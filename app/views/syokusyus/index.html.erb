<p id="notice"><%= notice %></p>

<h1>職種</h1>

<table>
  <thead>
    <tr>
      <th>職種名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @syokusyus.each do |syokusyu| %>
      <tr>
        <td><%= syokusyu.syokusyumei %></td>
        <td><%= link_to '詳細', syokusyu %></td>
        <td><%= link_to '更新', edit_syokusyu_path(syokusyu) %></td>
        <td><%= link_to '削除', syokusyu, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

