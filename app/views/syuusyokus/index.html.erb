<p id="notice"><%= notice %></p>

<h1>進学先一覧</h1>

<%= link_to 'ホーム画面', home_top_path %>

<table border="1">
  <thead>
    <tr>
      <th>学校名</th>
      <th>学科名</th>
      <th>県内</th>
      <th>学校HP</th>
      <th>評定</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @syuusyokus.each do |syuusyoku| %>
      <tr>
        <td><%= syuusyoku.gakkoumei %></td>
        <td><%= syuusyoku.gakka.gakkamei %></td>
        <td><%= syuusyoku.kennai %></td>
        <td><%= syuusyoku.shp %></td>
        <td><%= syuusyoku.hyoutei %></td>
        <td><%= link_to '詳細', syuusyoku %></td>
        <td><%= link_to '更新', edit_syuusyoku_path(syuusyoku) %></td>
        <td><%= link_to '削除', syuusyoku, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

