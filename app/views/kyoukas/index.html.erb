<p id="notice"><%= notice %></p>

<h1>教科</h1>

<table>
  <thead>
    <tr>
      <th>学年</th>
      <th>専攻</th>
      <th>教科名</th>
      <th>並び</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kyoukas.each do |kyouka| %>
      <tr>
        <td><%= kyouka.gakunen %></td>
        <td><%= kyouka.senkou %></td>
        <td><%= kyouka.namae %></td>
        <td><%= kyouka.narabi %></td>
        <td><%= link_to '詳細', kyouka %></td>
        <td><%= link_to '編集', edit_kyouka_path(kyouka) %></td>
        <td><%= link_to '削除', kyouka, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

