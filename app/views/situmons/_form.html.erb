<%= form_with(model: situmon) do |form| %>
  <% if situmon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(situmon.errors.count, "error") %> prohibited this situmon from being saved:</h2>

      <ul>
        <% situmon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :カテゴリ %>
    <%= form.radio_button :kategori, "1" %>就職
  　<%= form.radio_button :kategori, "2" %>進学
  </div>

  <div class="field">
  <%= form.label :カテゴリ2 %>
  <%= form.radio_button :kategori2, "3" %>勉強方法
　<%= form.radio_button :kategori2, "4" %>企業・学校

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :naiyou %>
  </div>

  <div class="field">
    <%= form.label :日付 %>
    <%= form.datetime_select :nitiji %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


