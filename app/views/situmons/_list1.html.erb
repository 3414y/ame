<table>
    <tr>
      <td><h2>進学</h2></td>
      <td><h4><%= link_to '学校', situmon_search_path %></h4></td>
    </tr>
    <tr>
      <td><br></br></td>
      <td><h4><%= link_to '勉強方法', situmon_search2_path %><h4></td>
    </tr>   
   
</table> 
<table>
    <tr>
      <th>ユーザ</th>
      <th>内容</th>
      <th>進学・就職</th>
      <th>日時</th>
      <th colspan="3"></th>
    </tr>
  <tbody>
    <% situmon.each do |s| %>
      <tr> 
        <td><%= s.user_id %></td>
        <td><%= s.naiyou %></td>
        <td><% if s.kategori == 1 %></td>
           就職
        <% else %>
           進学
        <% end %>
        <td><%= s.nitiji %></td>
        <td><%= link_to '詳細', s %></td>
        <% if teacher? %>
          <td><%= link_to '削除', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table> 