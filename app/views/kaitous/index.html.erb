<p id="notice"><%= notice %></p>

<h1>Kaitous</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hentou</th>
      <th>Situmon</th>
      <th>Nitiji</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kaitous.each do |kaitou| %>
      <tr>
        <td><%= kaitou.user_id %></td>
        <td><%= kaitou.hentou %></td>
        <td><%= kaitou.situmon_id %></td>
        <td><%= kaitou.nitiji %></td>
        <td><%= link_to 'Show', kaitou %></td>
        <td><%= link_to 'Edit', edit_kaitou_path(kaitou) %></td>
        <td><%= link_to 'Destroy', kaitou, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

