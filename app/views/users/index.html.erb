<p id="notice"><%= notice %></p>

<h1>利用者</h1>

<table>
  <thead>
    <tr>
      <th>アカウント</th>
      <th>パスワード</th>
      <th>学年</th>
      <th>組</th>
      <th>氏名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.akaunto %></td>
        <td><%= user.pasuwado %></td>
        <td><%= user.gakunen %></td>
        <td><%= user.kumi %></td>
        <td><%= user.simei %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

